{
  "manifest_version": 3,
  "name": "SRM Auto Login",
  "short_name": "SRM Login",
  "version": "1.0.1",
  "description": "Auto-fills the SRM campus network portal when your session expires. Works on iach and iac portals.",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://iach.srmist.edu.in/*",
    "https://iac.srmist.edu.in/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://iach.srmist.edu.in/*",
        "https://iac.srmist.edu.in/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "SRM Auto Login",
    "default_icon": {
      "16":  "icons/icon16.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
